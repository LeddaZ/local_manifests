<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <!-- AwakenOS 2.x for miatoll -->

    <!-- External remotes -->
    <remote name="proton" fetch="https://github.com/ProtonAOSP" revision="sc" />

    <!-- Projects to remove -->
    <remove-project name="android_frameworks_base" />
    <remove-project name="android_packages_apps_Settings" />
    <remove-project name="platform/external/noto-fonts" />
    <remove-project name="platform/external/roboto-fonts" />
    <remove-project name="platform/external/google-fonts/cutive-mono" />
    <remove-project name="platform/packages/apps/CarrierConfig" />
    <remove-project name="android_vendor_awaken" />

    <!-- Device trees -->
    <project path="device/xiaomi/miatoll" name="LeddaZ/android_device_xiaomi_miatoll" revision="awaken" remote="github" />
    <project path="device/xiaomi/sm6250-common" name="LeddaZ/android_device_xiaomi_sm6250-common" revision="awaken" remote="github" />

