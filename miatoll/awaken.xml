    <project path="kernel/xiaomi/sm6250" name="LeddaZ/kernel_xiaomi_sm6250" revision="eleven" remote="github" />

    <!-- Vendor blobs -->
    <project path="vendor/xiaomi/miatoll" name="LeddaZ/android_vendor_xiaomi_miatoll" revision="twelve" remote="github" />
    <project path="vendor/xiaomi/sm6250-common" name="LeddaZ/android_vendor_xiaomi_sm6250-common" revision="android-12" remote="github" />

    <!-- Repos from ArrowOS -->
    <project path="hardware/xiaomi" name="ArrowOS-Devices/android_hardware_xiaomi" revision="arrow-12.0" remote="github" />
    <project path="hardware/qcom-caf/sm8150/audio" name="ArrowOS/android_hardware_qcom_audio" revision="arrow-12.0-caf-sm8150" remote="github" />
    <project path="hardware/qcom-caf/sm8150/display" name="ArrowOS/android_hardware_qcom_display" revision="arrow-12.0-caf-sm8150" remote="github" />
    <project path="hardware/qcom-caf/sm8150/media" name="ArrowOS/android_hardware_qcom_media"  revision="arrow-12.0-caf-sm8150" remote="github" />

    <!-- Repos from me -->
    <project path="frameworks/base" name="LeddaZ/android_frameworks_base" revision="12" remote="github" />
    <project path="packages/apps/Settings" name="LeddaZ/android_packages_apps_Settings" revision="12" remote="github" />
    <project path="packages/apps/CarrierConfig" name="LeddaZ/android_packages_apps_CarrierConfig" revision="12" remote="github" />
    <project path="vendor/awaken" name="LeddaZ/android_vendor_awaken" revision="12" remote="github" />
      
    <!-- Repos from ProtonAOSP -->
    <project name="android_external_noto-fonts" path="external/noto-fonts" remote="proton" groups="proton" /> 
    <project name="android_external_roboto-fonts" path="external/roboto-fonts" remote="proton" groups="proton" />
    <project name="android_external_google-fonts_cutive-mono" path="external/google-fonts/cutive-mono" remote="proton" groups="proton" />

</manifest>
